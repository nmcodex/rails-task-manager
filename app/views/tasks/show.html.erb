  <input type="checkbox" onclick="return false;" <%= @task.completed ? "checked" : "" %>> <%= @task.completed ? "This task is completed" : "This task is not completed yet" %>
</div>

<div>
  <%= link_to "Back to list", tasks_path %>
</div>
